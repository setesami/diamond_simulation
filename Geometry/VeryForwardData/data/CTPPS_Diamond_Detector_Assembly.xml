<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../../DetectorDescription/Schema/DDLSchema.xsd">

  <SolidSection label="CTPPS_Diamond_Detector_Assembly.xml">
    <!-- Detector Main Box and Planes -->
    <Box name="CTPPS_Diamond_Main_Box" dx="[CTPPS_Diamond_Parameters:Main_Box_dx]" dy="[CTPPS_Diamond_Parameters:Main_Box_dy]" dz="[CTPPS_Diamond_Parameters:Chromium_thick]*4+[CTPPS_Diamond_Parameters:Gold_thick]*8+[CTPPS_Diamond_Parameters:Diamond_dz]*4+[CTPPS_Diamond_Parameters:PCB_thick]*4+[CTPPS_Diamond_Parameters:Plane_gap]*3"/>
    <!--<Box name="Downstream_Plane" dx="0*mm" dy="0*mm" dz="0*mm"/>-->
  </SolidSection>

  <LogicalPartSection label="CTPPS_Diamond_Detector_Assembly.xml">
    <!-- ****** Detector Box and Downstream Plane ****** -->
    <LogicalPart name="CTPPS_Diamond_Main_Box" category="unspecified">
      <rSolid name="CTPPS_Diamond_Main_Box"/>
      <rMaterial name="CTPPS_Diamond_Materials:Vacuum"/>
    </LogicalPart>
    <!--<LogicalPart name="Downstream_Plane" category="unspecified">
      <rSolid name="Downstream_Plane"/>
      <rMaterial name="CTPPS_Diamond_Materials:Copper"/>
    </LogicalPart>-->
    <!--FIXME to be defined -->
  </LogicalPartSection>

  <PosPartSection label="CTPPS_Diamond_Detector_Assembly.xml">
    <PosPart copyNumber="0">
      <rParent name="CTPPS_Timing_Horizontal_Pot:CTPPS_Timing_Cylinder_wall"/>
      <rChild name="CTPPS_Diamond_Main_Box"/>
      <Translation x="0*cm" y="[CTPPS_Timing_Horizontal_Pot:outer_diameter]/2-[CTPPS_Timing_Horizontal_Pot:wall_thickness]-[CTPPS_Diamond_Parameters:Chromium_thick]*4-[CTPPS_Diamond_Parameters:Gold_thick]*8-[CTPPS_Diamond_Parameters:Diamond_dz]*4-[CTPPS_Diamond_Parameters:PCB_thick]*4-[CTPPS_Diamond_Parameters:Plane_gap]*3" z="[CTPPS_Timing_Horizontal_Pot:window_thickness_bottom]-[CTPPS_Timing_Horizontal_Pot:height_lower_part]/2+[CTPPS_Diamond_Parameters:Main_Box_dy]"/>
      <Rotation name="Detector_Box" phiX="0*deg" phiY="0*deg" phiZ="270*deg" thetaX="90*deg" thetaY="0*deg" thetaZ="90*deg"/>
    </PosPart>
    <PosPart copyNumber="0">
      <rParent name="CTPPS_Diamond_Main_Box"/>
      <rChild name="CTPPS_Diamond_Plane1:CTPPS_Diamond_Plane"/>
      <Translation x="0*cm" y="0*cm" z="-[CTPPS_Diamond_Parameters:Plane_dz]*3-[CTPPS_Diamond_Parameters:Plane_gap]*3"/>
      <rRotation name="rotations:000D"/>
    </PosPart>
    <PosPart copyNumber="1">
      <rParent name="CTPPS_Diamond_Main_Box"/>
      <rChild name="CTPPS_Diamond_Plane2:CTPPS_Diamond_Plane"/>
      <Translation x="0*cm" y="0*cm" z="-[CTPPS_Diamond_Parameters:Plane_dz]-[CTPPS_Diamond_Parameters:Plane_gap]"/>
      <rRotation name="rotations:000D"/>
    </PosPart>
    <PosPart copyNumber="2">
      <rParent name="CTPPS_Diamond_Main_Box"/>
      <rChild name="CTPPS_Diamond_Plane3:CTPPS_Diamond_Plane"/>
      <Translation x="0*cm" y="0*cm" z="[CTPPS_Diamond_Parameters:Plane_dz]+[CTPPS_Diamond_Parameters:Plane_gap]"/>
      <rRotation name="rotations:000D"/>
    </PosPart>
    <PosPart copyNumber="3">
      <rParent name="CTPPS_Diamond_Main_Box"/>
      <rChild name="CTPPS_Diamond_Plane4:CTPPS_Diamond_Plane"/>
      <Translation x="0*cm" y="0*cm" z="[CTPPS_Diamond_Parameters:Plane_dz]*3+[CTPPS_Diamond_Parameters:Plane_gap]*3"/>
      <rRotation name="rotations:000D"/>
    </PosPart>
  </PosPartSection>

</DDDefinition>

